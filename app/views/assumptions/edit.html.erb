<div class = "show-listing container">
  <%= form_tag "/assumptions", method: :patch do %>
<!--     <%= button_tag 'Update', class: "btn btn-default pull-right" %> -->

    <div class="row show-listing-edit pull-right">
      <div class="ibox-title pull-right">
        <a href="/assumptions/edit">
          <i type= "submit" class="fa fa-floppy-o fa-2x"></i>
        </a>
      </div>
    </div>

    <div class = "row assumptions-wells">
        <div class = "well col-md-6 assumptions-info">
          <h4>User info</h4>
          <p>First Name: <%= text_field_tag(:input_first_name, current_user.first_name )%> </p>
          <p>Last Name: <%= text_field_tag(:input_last_name, current_user.last_name )%> </p>
          <p>Email: <%= current_user.email %> </p>
        </div>  
        <div class = "well col-md-6 assumptions-info">
          <h4>Mortgage Assumptions</h4>
          <p>Percent Down Payment:<%= text_field_tag(:input_percent_down_pmt, current_user.percent_down_pmt)%> %</p>
          <p>Loan Type: <%= text_field_tag(:input_loan_type, current_user.loan_type) %> year fixed </p>
        </div>  
    </div>
  <% end %>
</div>




