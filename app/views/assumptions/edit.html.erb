<%= form_tag "/assumptions", method: :patch do %>
<div class = "show-listing container">
    <div class="row show-listing-edit pull-right">
      <div class="ibox-title pull-right" ng-click="updateAssumptions()">
        <a href="#">
          <button type="submit">Update</button>
          <i type="submit" class="fa fa-floppy-o fa-2x"></i>
        </a>
      </div>
    </div>
    
  <div class = "row assumptions-wells">
  
      <div class = "well col-md-6 assumptions-info">
        <h4>User info</h4>
        <p>First Name:
        <input type="text" value="<%= current_user.first_name %>" name="input_first_name" id="input_first_name"></p>
        <p>Last Name: 
        <input type="text" value="<%= current_user.last_name %>" name="input_last_name" id="input_last_name"></p>
        <p>Email: <%= current_user.email %> </p>
      </div>  
      <div class = "well col-md-6 assumptions-info">
        <h4>Mortgage Assumptions</h4>
        <p>Percent Down Payment: <input type="text" value="<%= current_user.percent_down_pmt %>" name="input_percent_down_pmt" id="input_percent_down_pmt">% </p>
        <p>Loan Type: <input type="text" value="<%= current_user.loan_type %>" name="input_loan_type" id="input_loan_type"> year fixed rate</p>
      </div> 
     
  </div>
</div>
<% end %>

  



